pipeline {
    agent { label 'preprod-slave' }
    parameters {
        choice(name: 'ENV', choices: ['DEV','QA','PROD'],description: 'please select the env')
        password(name: 'PASSWORD', defaultValue: '',description: 'please provide the password')
    }
    environment {
        MAVEN_HOME = '/usr/bin/'
        REGION = "us-east-2"
    }
    stages {
        stage('Hello') {
            when {
    environment name: "REGION, value: "us-east-1"
}
            steps {  
                echo "Hello World ${REGION}"
                echo "${params.ENV}"
            }
        }
        stage('build') {
            steps {
                echo 'stage -2'
            }
        }
    }
}
